<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许特定域名使用 HTTP 明文传输 -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- 咪咕音乐 -->
        <domain includeSubdomains="true">migu.cn</domain>
        <domain includeSubdomains="true">freetyst.nf.migu.cn</domain>
        
        <!-- 酷狗音乐 -->
        <domain includeSubdomains="true">kugou.com</domain>
        
        <!-- QQ音乐 -->
        <domain includeSubdomains="true">qq.com</domain>
        
        <!-- 网易云音乐 -->
        <domain includeSubdomains="true">163.com</domain>
        <domain includeSubdomains="true">music.126.net</domain>
        
        <!-- 抖音 -->
        <domain includeSubdomains="true">douyin.com</domain>
        <domain includeSubdomains="true">douyinvod.com</domain>
        
        <!-- 龙珠API服务器 -->
        <domain includeSubdomains="true">hhlqilongzhu.cn</domain>
    </domain-config>
    
    <!-- 其他域名保持 HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

